<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="User">

	<typeAlias alias="User" type="com.xwin.domain.user.User" />
	
	<resultMap id="userResultMap" class="User">
		<result property="id" column="ID"/>
		<result property="userId" column="USERID"/>
		<result property="nickName" column="NICKNAME"/>
		<result property="email" column="EMAIL"/>
		<result property="balance" column="BALANCE"/>
	</resultMap>
	
	<select id="selectUserInfoList" resultMap="userResultMap"
		parameterClass="map">
		SELECT * FROM USERINFO
	</select>
	
	<insert id="insertUserInfo" parameterClass="User">
		INSERT INTO USERINFO(USERID, NICKNAME, EMAIL, BALANCE)
			VALUES(#userId#, #nickName#, #email#, #balance#)
	</insert>	
</sqlMap>
