<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="GameWdl">

	<typeAlias alias="GameWdl" type="com.xwin.domain.game.GameWdl" />
	
	<resultMap id="GameWdlResultMap" class="GameWdl">
		<result property="id" column="ID"/>
		<result property="homeTeam" column="HOME_TEAM"/>
		<result property="awayTeam" column="AWAY_TEAM"/>
		<result property="winRate" column="WIN_RATE"/>
		<result property="drawRate" column="DRAW_RATE"/>
		<result property="loseRate" column="LOSE_RATE"/>
		<result property="status" column="STATUS"/>
		<result property="date" column="DATE"/>
		<result property="leagueId" column="LEAGUE_ID"/>
		<result property="leagueName" column="LEAGUE_NAME"/>
	</resultMap>
	
	<select id="selectGameWdlList" resultMap="GameWdlResultMap">
		SELECT g.*, l.NAME as LEAGUE_NAME FROM tbl_game_wdl g, tbl_league l where g.LEAGUE_ID = l.ID
	</select>
	
	<select id="selectGameWdlListByLeagueId" resultMap="GameWdlResultMap"
		parameterClass="java.lang.String">
		SELECT g.*, l.NAME as LEAGUE_NAME FROM tbl_game_wdl g, tbl_league l where g.LEAGUE_ID = l.ID AND g.LEAGUE_ID = #value#
	</select>
	
	<insert id="insertGameWdl" parameterClass="GameWdl">
		INSERT INTO tbl_game_wdl(HOME_TEAM, AWAY_TEAM, WIN_RATE, DRAW_RATE, LOSE_RATE, STATUS, DATE, LEAGUE_ID)
			VALUES(#homeTeam#, #awayTeam#, #winRate#, #drawRate#, #loseRate#, #status#, #date#, #leagueId#)
	</insert>
	
</sqlMap>
