<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="Team">

	<typeAlias alias="Team" type="com.xwin.domain.sports.Team" />
	
	<resultMap id="teamResultMap" class="Team">
		<result property="id" column="ID"/>
		<result property="name" column="NAME"/>
	</resultMap>
	
	<select id="selectTeamList" resultMap="teamResultMap"
		parameterClass="map">
		select * from League
		order by ID desc
	</select>
	
	<insert id="insertTeam" parameterClass="Team">
		INSERT INTO LEAGUE(NAME) VALUES(#name#)
	</insert>
	
</sqlMap>
