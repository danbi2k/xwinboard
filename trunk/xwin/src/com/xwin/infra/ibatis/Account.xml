<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
	
<sqlMap namespace="Account">

	<typeAlias alias="Account" type="com.xwin.domain.admin.Account" />
	
	<resultMap id="accountResultMap" class="Account">
		<result property="id" column="ID"/>		
		<result property="userId" column="USERID"/>
		<result property="money" column="MONEY"/>
		<result property="balance" column="BALANCE"/>
		<result property="oldBalance" column="OLD_BALANCE"/>
		<result property="description" column="DESCRIPTION"/>
		<result property="type" column="TYPE"/>
		<result property="date" column="DATE"/>
		<result property="bettingId" column="BETTING_ID"/>
		<result property="moneyInId" column="MONEYIN_ID"/>
		<result property="moneyOutId" column="MONEYOUT_ID"/>
	</resultMap>
	
	<insert id="insertAccount" parameterClass="Account">
		INSERT INTO tbl_account(USERID, MONEY, BALANCE, OLD_BALANCE, DESCRIPTION, TYPE, DATE, BETTING_ID, MONEYIN_ID, MONEYOUT_ID)
		VALUES(#userId#, #money#, #balance#, #oldBalance#, #description#, #type#, #date#, #bettingId#, #moneyInId#, #moneyOutId#)
	</insert>
	
	<delete id="deleteAccount" parameterClass="string">
		DELETE FROM tbl_account WHERE ID = #value#
	</delete>
	
	<select id="selectAccountList" resultMap="accountResultMap" parameterClass="map">
		SELECT * FROM tbl_account
		<dynamic prepend="WHERE">
			<isNotNull prepend="AND" property="userId">
				USERID = #userId#
			</isNotNull>
			<isNotNull prepend="AND" property="type">
				TYPE = #type#
			</isNotNull>
			<isNotNull prepend="AND" property="name">
				NAME = #name#
			</isNotNull>
			<isNotNull prepend="AND" property="fromReqDate">
				<![CDATA[
				REQ_DATE >= #fromReqDate#
				]]>
			</isNotNull>
			<isNotNull prepend="AND" property="toReqDate">
				<![CDATA[
				REQ_DATE <= #toReqDate#
				]]>
			</isNotNull>
			<isNotNull prepend="AND" property="fromProcDate">
				<![CDATA[
				PROC_DATE >= #fromProcDate#
				]]>
			</isNotNull>
			<isNotNull prepend="AND" property="toProcDate">
				<![CDATA[
				PROC_DATE <= #procProcDate#
				]]>
			</isNotNull>
		</dynamic>
	</select>
</sqlMap>
