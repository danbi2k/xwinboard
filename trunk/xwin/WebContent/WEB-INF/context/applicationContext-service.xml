<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">
		    
	<bean id="ktfSmsConnector" class="com.xwin.infra.sms.KtfSmsConnector">
		<property name="ktfSmsDao">
			<ref bean="ktfSmsDao" />
		</property>
	</bean>	
	
	<bean id="leagueService" class="com.xwin.service.sports.LeagueService">
		<property name="leagueDao">
			<ref bean="leagueDao" />
		</property>
	</bean>
	
	<bean id="gameWdlService" class="com.xwin.service.sports.GameWdlService">
		<property name="gameWdlDao">
			<ref bean="gameWdlDao" />
		</property>
	</bean>
	
	<bean id="userService" class="com.xwin.service.user.UserService"
		p:userInfoDao-ref="userInfoDao"/>
</beans>